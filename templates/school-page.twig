{% extends "base.twig" %}

{% block content %}
	<div class="container mx-auto">
    <header>
      <img src="{{Image(post.meta('image_header')).src}}" alt="{{Image(post.meta('image_header')).alt}}" />
    </header>
		{{ dump() }}
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<div class="flex space-x-2 flex-wrap lg:flex-nowrap">
					<div class="w-full lg:w-2/3">
						<div class="article-body px-6 mt-8">
						{{post.meta('side_content')}}
						</div>
					</div>
					<div class="w-full lg:w-1/3 mx-auto">
						<div class="article-form">
      				<img src="{{Image(post.meta('school_logo')).src}}" alt="{{Image(post.meta('school_logo')).alt}}" />
							<div>{{post.form|shortcodes}}</div>
						</div>
					</div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}